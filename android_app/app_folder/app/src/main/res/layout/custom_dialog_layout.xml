<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="600dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/T_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/C_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적립 포인트"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/C_guideline"
        app:layout_constraintStart_toStartOf="@+id/C_guideline"
        app:layout_constraintTop_toBottomOf="@+id/T_guideline"
        app:layout_constraintBottom_toTopOf="@id/T_guideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/LV_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RV_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/TH_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/BH_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:layout_constraintBottom_toTopOf="@+id/TH_guideline"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toTopOf="@+id/TH_guideline"
        app:srcCompat="@drawable/can" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:layout_constraintBottom_toTopOf="@+id/TH_guideline"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toTopOf="@+id/TH_guideline"
        app:srcCompat="@drawable/glass_bottle_g"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:layout_constraintBottom_toTopOf="@+id/BH_guideline"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toTopOf="@+id/BH_guideline"
        app:srcCompat="@drawable/lable_plastic_bottle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:layout_constraintBottom_toTopOf="@+id/BH_guideline"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toTopOf="@+id/BH_guideline"
        app:srcCompat="@drawable/no_label_plastic_bottle" />

    <TextView
        android:id="@+id/textView_l_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라벨 페트병"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView_nl_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노라벨 페트병"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    <TextView
        android:id="@+id/textView_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캔"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <TextView
        android:id="@+id/textView_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+20"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_can" />

    <TextView
        android:id="@+id/textView_glass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유리"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/textView_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+20"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_glass" />

    <TextView
        android:id="@+id/textView_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/LV_guideline"
        app:layout_constraintStart_toStartOf="@+id/LV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_nl_bottle" />

    <TextView
        android:id="@+id/textView_nl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+30"
        android:textColor="@color/green"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/RV_guideline"
        app:layout_constraintStart_toStartOf="@+id/RV_guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_l_bottle" />
</androidx.constraintlayout.widget.ConstraintLayout>